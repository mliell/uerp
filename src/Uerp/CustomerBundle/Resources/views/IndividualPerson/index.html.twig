{% extends '::base.html.twig' %}

{% block body -%}
    <h1>IndividualPerson list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Cpf</th>
                <th>Rgnumber</th>
                <th>Rgexpeditiondate</th>
                <th>Rgexpeditionlocal</th>
                <th>Occupation</th>
                <th>Workplace</th>
                <th>Salary</th>
                <th>Spousename</th>
                <th>Fathername</th>
                <th>Mothername</th>
                <th>Gender</th>
                <th>Id</th>
                <th>Name</th>
                <th>Phone_number</th>
                <th>Mobile_number</th>
                <th>Email</th>
                <th>Birth_date</th>
                <th>Street</th>
                <th>Street_number</th>
                <th>Complement</th>
                <th>District</th>
                <th>Postal_code</th>
                <th>City</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('individualperson_show', { 'id': entity.id }) }}">{{ entity.cpf }}</a></td>
                <td>{{ entity.rgNumber }}</td>
                <td>{% if entity.rgExpeditionDate %}{{ entity.rgExpeditionDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.rgExpeditionLocal }}</td>
                <td>{{ entity.occupation }}</td>
                <td>{{ entity.workplace }}</td>
                <td>{{ entity.salary }}</td>
                <td>{{ entity.spouseName }}</td>
                <td>{{ entity.fatherName }}</td>
                <td>{{ entity.motherName }}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.phonenumber }}</td>
                <td>{{ entity.mobilenumber }}</td>
                <td>{{ entity.email }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.streetnumber }}</td>
                <td>{{ entity.complement }}</td>
                <td>{{ entity.district }}</td>
                <td>{{ entity.postalcode }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.notes }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('individualperson_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('individualperson_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('individualperson_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
